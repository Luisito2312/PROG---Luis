Algoritmo diaDeSemana
	
	Definir diaSemana como entero;
	Escribir "Introduce el numero del dia de la semana. Siendo Lunes el 1";
	Leer diaSemana;
	
	Segun diaSemana Hacer
		1:
			Escribir "Es lunes";
		2:
			Escribir "Es martes";
		3:
			Escribir "Es miercoles";
		4:
			Escribir "Es jueves";
		5:
			Escribir "Es viernes";
		6:
			Escribir "Es sabado";
		7:
			Escribir "Es domingo";
		De Otro Modo:
			Escribir "No ha introducido un valor válido";
	Fin Segun;
	
	
FinAlgoritmo
